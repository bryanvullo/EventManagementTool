{
  "bsonType": "object",
  "required": [
    "event_id",
    "creator_id",  
    "name",
    "type",
    "desc",
    "location_id",
    "start_date",
    "end_date",
    "max_tick",
    "max_tick_pp",
    "img_url"
  ],
  "properties": {
    "event_id": {
      "bsonType": "string",
      "description": "Unique identifier for the event."
    },
    "creator_id": {
      "bsonType": "array",
      "description": "Array of user IDs who are event owners or admins.",
      "items": {
        "bsonType": "string"
      }
    },
    "name": {
      "bsonType": "string",
      "description": "Name of the event."
    },
    "type": {
      "bsonType": "string",
      "description": "Indicates the type of event. (e.g. society, lecture, etc.)"
    },
    "tags": {
      "bsonType": "array",
      "description": "List of tags associated with the event.",
      "items": {
        "bsonType": "string"
      }
    },
    "desc": {
      "bsonType": "string",
      "description": "Description of the event."
    },
    "location_id": {
      "bsonType": "string",
      "description": "Location reference in locations partition."
    },
    "start_date": {
      "bsonType": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{7}Z$",
      "description": "Start date/time in UTC, format yyyy-MM-ddTHH:mm:ss.fffffffZ"
    },
    "end_date": {
      "bsonType": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{7}Z$",
      "description": "End date/time in UTC, format yyyy-MM-ddTHH:mm:ss.fffffffZ"
    },
    "max_tick": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Maximum number of tickets available for the event."
    },
    "max_tick_pp": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Maximum number of tickets per person."
    },
    "img_url": {
      "bsonType": "string",
      "pattern": "^(https?:\\/\\/)?([\\w.-]+)+(:\\d+)?(\\/[^\\s]*)?$",
      "description": "URL of the event image."
    }
  },
  "additionalProperties": false
}
