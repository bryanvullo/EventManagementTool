{
  "type": "object",
  "required": [
    "location_id",
    "location_name",
    "events_ids",
    "rooms"
  ],
  "properties": {
    "location_id": {
      "type": "string",
      "description": "Unique identifier for the location (partition key)."
    },
    "location_name": {
      "type": "string",
      "description": "Name of the location."
    },
    "events_ids": {
      "type": "array",
      "description": "List of all event IDs associated with this BUILDING.",
      "items": {
        "type": "object",
        "required": ["event_id"],
        "properties": {
          "event_id": {
            "type": "string",
            "description": "Identifier of the event."
          }
        },
        "additionalProperties": true
      }
    },
    "rooms": {
      "type": "array",
      "description": "List of available rooms for this location.",
      "items": {
        "type": "object",
        "required": ["room_id", "room_name", "capacity", "event_id"],
        "properties": {
          "room_id": {
            "type": "string",
            "description": "A unique identifier for the room."
          },
          "room_name": {
            "type": "string",
            "description": "Room name or number."
          },
          "capacity": {
            "type": "number",
            "minimum": 0,
            "description": "Seating or occupant capacity of the room."
          },
          "events_ids": {
            "type": "array",
            "description": "List of all event IDs associated with this ROOM.",
            "items": {
              "type": "object",
              "required": ["event_id"],
              "properties": {
                "event_id": {
                  "type": "string",
                  "description": "Identifier of the event."
                }
              },
              "additionalProperties": true
            }
          },
          "description": {
            "type": "string",
            "description": "Optional brief description of the room."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}