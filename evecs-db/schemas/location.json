{
  "bsonType": "object",
  "required": [
    "location_id",
    "location_name",
    "events_ids",
    "capacity",
    "rooms"
  ],
  "properties": {
    "location_id": {
      "bsonType": "string",
      "description": "Unique identifier for the location (partition key)."
    },
    "location_name": {
      "bsonType": "string",
      "description": "Name of the location."
    },
    "events_ids": {
      "bsonType": "array",
      "description": "List of event IDs associated with this location.",
      "items": {
        "bsonType": "object",
        "required": ["event_id"],
        "properties": {
          "event_id": {
            "bsonType": "string",
            "description": "Identifier of the event."
          }
        },
        "additionalProperties": false
      }
    },
    "capacity": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Overall building capacity or occupant limit."
    },
    "rooms": {
      "bsonType": "array",
      "description": "List of available rooms for this location.",
      "items": {
        "bsonType": "object",
        "required": ["room_id", "room_name", "capacity"],
        "properties": {
          "room_id": {
            "bsonType": "string",
            "description": "A unique identifier for the room."
          },
          "room_name": {
            "bsonType": "string",
            "description": "Room name or number."
          },
          "capacity": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Seating or occupant capacity of the room."
          },
          "description": {
            "bsonType": "string",
            "description": "Optional brief description of the room."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
