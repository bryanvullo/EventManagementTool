{
    "bsonType": "object",
    "required": ["ticket_id", "user_id", "email"],
    "properties": {
      "ticket_id": {
        "bsonType": "string",
        "description": "Unique identifier for the ticket."
      },
      "user_id": {
        "bsonType": "string",
        "description": "Identifier of the user who owns the ticket."
      },
      "email": {
        "bsonType": "string",
        "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$",
        "description": "Email address associated with the ticket."
      }
    },
    "additionalProperties": false
  }
  